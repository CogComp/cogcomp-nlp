(define features
  
  (define word-context
    (context :size 2
	     :include-index true
	     :ignore-center true
	     word))

  (define pos-context
    (context :size 2
	     :include-index true
	     :ignore-center true
	     pos))
  
  (define predicate-features
    (list word
  	  pos
  	  lemma
  	  capitalization

  	  word-context
  	  pos-context

	  (attribute :name predicate)

  	  (subcat-frame :parse-view *default-parser*)
  	  nom-lex-class))
  	  
   predicate-features)
